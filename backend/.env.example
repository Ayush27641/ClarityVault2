# Server Configuration
PORT=3000
NODE_ENV=development

# Groq API Configuration (AI/ML Service)
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration (Supabase PostgreSQL)
# Use the connection pooling URL (with pgbouncer) for most operations
DATABASE_URL=postgresql://user:password@host:6543/postgres?pgbouncer=true
# Use direct connection URL for migrations
DIRECT_URL=postgresql://user:password@host:5432/postgres

# JWT Configuration (Authentication)
JWT_SECRET=your-super-secret-jwt-key-make-this-very-secure-and-long-32-chars-minimum
JWT_EXPIRE=30d

# YouTube API (Optional - for video search feature)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Frontend URL (for CORS - update in production)
FRONTEND_URL=http://localhost:5173
